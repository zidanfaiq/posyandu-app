<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp">

        <ImageView
            android:id="@+id/imgOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_more_vert_24">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/rlNama"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="15sp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AZ"
                android:textSize="24dp"
                android:textColor="#FFFFFF">
            </TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/rlNama">

            <TextView
                android:id="@+id/tvAnakID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anak ID"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvNamaAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Anak"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="2dp">
            </TextView>

            <TextView
                android:id="@+id/tvAnakKe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anak Ke-"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvAkte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Akte Kelahiran"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvNIKAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK"
                android:layout_marginBottom="2dp">
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvJK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:layout_toStartOf="@id/tvTglLahir"
                    android:layout_alignParentStart="true"
                    android:maxLines="1"
                    android:ellipsize="end">
                </TextView>

                <TextView
                    android:id="@+id/tvTglLahir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:layout_alignParentEnd="true">
                </TextView>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvTempatLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvDarah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golongan Darah"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvUserID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UserID"
                android:visibility="gone">
            </TextView>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>