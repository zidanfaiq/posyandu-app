<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp">

        <ImageView
            android:id="@+id/imgOptionMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_more_vert_24">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlNamaAnak"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="15sp"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tvNameAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AZ"
                android:textSize="24dp"
                android:textColor="#FFFFFF">
            </TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/rlNamaAnak">

            <TextView
                android:id="@+id/tvRNamaAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Anak"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_marginBottom="2dp">
            </TextView>

            <TextView
                android:id="@+id/tvTinggiBadan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TB :"
                android:layout_marginBottom="2dp">
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBeratBadan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BB :"
                    android:layout_alignParentStart="true">
                </TextView>

                <TextView
                    android:id="@+id/tvTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Lahir"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textAlignment="textEnd"
                    android:layout_alignParentEnd="true">
                </TextView>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvPemeriksaanID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat ID"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvImunisasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Campak"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvVitamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vitamin"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvStatusGizi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Gizi"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvPenyuluhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penyuluhan"
                android:visibility="gone">
            </TextView>

            <TextView
                android:id="@+id/tvIDAnak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anak ID"
                android:visibility="gone">
            </TextView>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>